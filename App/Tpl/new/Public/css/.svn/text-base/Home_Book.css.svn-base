.bookshow_ul {}
.bookshow_ul li{
height:165px;
width:100px;
margin: 0 25px 20px 0;
display: inline-block;
text-align:center;
}
.bookshow_ul li img {
width: 100px;
height: 140px;
margin-bottom: 10px;
-moz-box-shadow: 0 0 1px 0 #DDDDDD;
-webkit-box-shadow: 0 0 2px 0 #DDD;
text-align: center;
}

.nextcid_ul {
margin:10px 0;
overflow:hidden;
}
.nextcid_ul a{
color:#999;
}
.nextcid_ul li {
height:25px;line-height:25px;
float:left;
text-align:center;
margin-right:8px;
padding:0 3px;
}
.nextcid_li {
border-bottom:1px solid #ED1C24;
}

/*book单页*/
.booktop_l {float:left;width:150px;height:200px;}
.booktop_l img{width:150px;height:200px;}
.booktop_r {float:left;height:200px;width:450px;margin-left:20px;}
.booktop_r .booktitle{font-size:16px;font-weight:bold;text-align:center;}
.bookdesc { height:120px;color:#999;margin-top:10px;}
		/*单页文章等显示*/
.bookblog_all{ border-top:1px solid #E9E9E9;
overflow:hidden;padding-top:10px;padding-bottom:10px;
}
.bookblog_all:hover{ border-top:1px solid #ED1C24;background:#fcfcfc;}
.bookblog_all:hover a{ color:#ED1C24;}
.bookblog_l {width:50px;margin-top:7px;}	
.bookblog_r{width:560px;margin-left:10px;overflow:hidden;}	