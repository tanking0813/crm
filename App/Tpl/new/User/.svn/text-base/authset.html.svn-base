 <script>
	//var arr=new Array();
	
	$(function(){
		//var stb=false;
		$(':checkbox:gt(0)').each(function(index,obj){
			//var obj=$(this);
			
			$.get('__SELF__',{'checkstr':$(this).val(),'actname':'check'},function(data){
				//$(obj).attr('checked',data);
				if(data==1){
					$(obj).attr('checked',true);
				}else{
					$(obj).attr('checked',false);
				}
			});
		})
	})
	
	
	function special(){
		
		if($('#spec').attr('checked')==true){
		
			$(':checkbox:gt(0)').each(function(){
			
				$(this).attr('disabled',true);
			})
			$('input:radio').attr('disabled',true);
		}else{
			$(':checkbox:gt(0)').each(function(){
			
				$(this).attr('disabled',false);
			})
			$('input:radio').attr('disabled',false);
		}
	
	}
 </script>


